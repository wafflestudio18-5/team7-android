<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/layout_item_border">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_myeongjo_bold"
            android:textSize="24sp"
            tools:text="글감"/>

        <TextView
            android:id="@+id/content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:fontFamily="@font/nanum_myeongjo"
            tools:text="이건 글이다\n왜인지는 나도 잘 모른다\n\n단지 씀을 클론 코딩하기 위해\nUI를 짜고 있던 도중\n\n글이 적혀있는 공간이\n너무 허전해서\n하나 써보고 있는 것 뿐\n\n와플 화이팅~"
            android:gravity="center"/>

        <TextView
            android:id="@+id/writer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_myeongjo"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            tools:text="와플 스튜디오"/>

        <TextView
            android:id="@+id/created_at_text"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/nanum_myeongjo"
            tools:text="0000년 00월 00일 00시"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
