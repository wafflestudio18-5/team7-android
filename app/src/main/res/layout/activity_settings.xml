<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsActivity">


    <TextView
        android:id="@+id/back_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로"
        android:fontFamily="@font/nanum_myeongjo"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/setting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:fontFamily="@font/nanum_myeongjo_bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />

    <View
        android:id="@+id/divide_line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ACACAC"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/setting_text"
        />

    <LinearLayout
        android:id="@+id/edit_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/divide_line_1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="필명 / 소개 변경"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/nanum_myeongjo_bold"
            />

        <TextView
            android:id="@+id/writer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="필명"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/nanum_myeongjo"/>
    </LinearLayout>

    <View
        android:id="@+id/divide_line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ACACAC"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_layout"
        />

    <View
        android:id="@+id/divide_line_3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/divide_line_2"
        />

    <View
        android:id="@+id/divide_line_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ACACAC"
        app:layout_constraintTop_toBottomOf="@id/divide_line_3"
        />

    <LinearLayout
        android:id="@+id/logout_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/divide_line_4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/nanum_myeongjo_bold"
            />

    </LinearLayout>

    <View
        android:id="@+id/divide_line_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ACACAC"
        app:layout_constraintTop_toBottomOf="@id/logout_layout"
        />






</androidx.constraintlayout.widget.ConstraintLayout>