<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.edit.EditUserActivity">

    <TextView
        android:id="@+id/back_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로"
        android:fontFamily="@font/nanum_myeongjo"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/setting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필명 / 소개 변경"
        android:fontFamily="@font/nanum_myeongjo_bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/done_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:fontFamily="@font/nanum_myeongjo"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        />

    <View
        android:id="@+id/divide_line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ACACAC"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/setting_text"
        />

    <TextView
        android:id="@+id/writer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필명"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/nanum_myeongjo_bold"
        app:layout_constraintTop_toBottomOf="@id/divide_line_1"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:id="@+id/writer_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="당신의 이름은?"
        android:fontFamily="@font/nanum_myeongjo"
        app:layout_constraintTop_toBottomOf="@id/writer_text"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한 줄 소개"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/nanum_myeongjo_bold"
        app:layout_constraintTop_toBottomOf="@id/writer_edittext"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:id="@+id/description_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="당신을 소개해주세요"
        android:fontFamily="@font/nanum_myeongjo"
        app:layout_constraintTop_toBottomOf="@id/description_text"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>